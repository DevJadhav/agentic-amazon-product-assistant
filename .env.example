# =====================================================
# AI-Powered Amazon Product Assistant - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values

# =====================================================
# DEPLOYMENT CONFIGURATION
# =====================================================
DEPLOYMENT_ENV=development
ENVIRONMENT=development

# =====================================================
# API KEYS (Required - Choose at least one LLM provider)
# =====================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Groq Configuration (Alternative)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768

# Google Gemini Configuration (Alternative)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Ollama Configuration (Self-hosted)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# =====================================================
# LANGSMITH TRACING (Optional but recommended)
# =====================================================
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=amazon-electronics-assistant
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# =====================================================
# VECTOR DATABASE CONFIGURATION
# =====================================================
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_GRPC_PORT=50051
WEAVIATE_SCHEME=http

# =====================================================
# STREAMLIT CONFIGURATION
# =====================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# =====================================================
# PYTHON CONFIGURATION
# =====================================================
PYTHONPATH=/app/src:/app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =====================================================
# LOGGING CONFIGURATION
# =====================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/application.log

# =====================================================
# PERFORMANCE CONFIGURATION
# =====================================================
MAX_TOKENS=1000
TEMPERATURE=0.7
TOP_P=1.0
TOP_K=40
REQUEST_TIMEOUT=30
RATE_LIMIT=100

# =====================================================
# CACHE CONFIGURATION
# =====================================================
ENABLE_CACHE=true
CACHE_SIZE=1000
CACHE_TTL=3600

# =====================================================
# PRODUCTION SETTINGS
# =====================================================
# Uncomment these for production deployment
# STREAMLIT_SERVER_ENABLE_STATIC_SERVING=false
# STREAMLIT_SERVER_ENABLE_WEBSOCKET_COMPRESSION=true
# STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200
# STREAMLIT_SERVER_MAX_MESSAGE_SIZE=200 